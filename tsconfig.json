{
  "compilerOptions": {
    "module": "commonjs",
    "target": "es6",
    "sourceMap": false,
    "strict": true,
    "declaration": true,
    "outDir": "./dist/",
    "rootDir": ".",
    "lib": [
      "es6",
      "es2015",
      "es2017",
      "dom"
    ],
    "typeRoots": [
      "node_modules/@types",
      "./@types"
    ]
  },
  "exclude": [
    "node_modules",
    "dist"
  ],
  "compileOnSave": true
}
